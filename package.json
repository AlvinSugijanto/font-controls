{
  "name": "font-controls",
  "version": "1.3.0",
  "description": "A beautiful, Leva-inspired font controls library for React",
  "type": "module",
  "main": "./dist/font-controls.umd.cjs",
  "module": "./dist/font-controls.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/font-controls.js",
      "require": "./dist/font-controls.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite demo",
    "build": "tsc && vite build",
    "preview": "vite preview demo",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "font",
    "typography",
    "controls",
    "gui",
    "leva",
    "font-picker",
    "design-tools"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-dts": "^3.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alvinsugijanto/font-controls"
  },
  "dependencies": {
    "react-draggable": "^4.5.0"
  }
}
